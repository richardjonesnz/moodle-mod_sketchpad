{{!
    @template mod_sketchpad/view

    Moodle renders a simple view page

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * title String a page title.
    * body String of html code the formatted module intro.

    Example context (json):
        {
         "title": "My heading",
         "body": "<p>My html body</p>"
        }
}}
<div class="card">
    <div class="card-body">
        <h2 class="card-title">{{title}}</h2>
            <canvas id="mod_sketchpad_canvas" width="{{width}}" height="{{height}}"></canvas>
            <div class="mod_sketchpad_toolbox" width={{toolbarwidth}}>
                <button data-action="mod_sketchpad/increase_button">+</button>
                <span id="mod_sketchpad_size">10</span>
                <button data-action="mod_sketchpad/decrease_button">-</button>
                <input type="color" name="color" id="color">
                <button data-action="mod_sketchpad/clear">X</button>
            </div>
        <div>
</div>

{{#js}}
    require(['mod_sketchpad/sketchpad'],
        function(module) {
            module.init();
        }
    );
{{/js}}